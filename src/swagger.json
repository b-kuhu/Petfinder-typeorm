{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Petfinder api",
        "description": "A CRUD API using Typeorm and TypeScript",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
   
    "components": {
         "schemas": {
            "Animal":{
                "type": "object",
                "properties": {
                    "id":{
                        "type":"number"
                    },
                    "name":{
                        "type":"string"
                    },
                    "breed":{
                        "type":"string"
                    }
                }
            },
            "Owner":{
                "type":"object",
                "properties": {
                    "owner_id":{
                        "type": "number"
                    },
                    "contact":{
                        "type": "string"
                    },
                    "address":{
                        "type":"string"
                    }
                }
            },
            "Shelter":{
                "type":"object",
                "properties": {
                    "id":{
                        "type":"number"
                    },
                    "roomNo":{
                        "type":"number"
                    },
                    "dateOfArrival":{
                        "type": "string"
                    },
                    "dateOfAdoption":{
                        "type": "string"
                    },
                    "animalId":{
                        "type":"number"
                    },
                    "ownerId":{
                        "type":"number"
                    }
                }
            }
         }
           
            
    },
    "paths":{
        "/animals":{
            "get":{
                "summary": "returns a list of animals",
                "responses": {
                    "200":{
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Animal",
                                    "type":"array"
                                }
                            }
                        }
                        
                       }       
                }
            },
            "post":{
                "summary": "creates a new animal",
                "requestBody":{
                    "description": "add new animal in shelter",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/Animal"}
                            }
                        }
                    },
                    "responses": {
                        "200":{
                            "description": "OK"
                           
                        }
                    }
                }
            
        },
        "/animals/{id}":{
            "get":{
                "summary": "returns an animal by id",
                "parameters": [
                    {
                        "name": "id",
                        "in":"path",
                        "required": true,
                        "description": "animal id that we want to match",
                        "schema":{
                            "type":"number"
                        }
                        
                    }
                ],
                "responses": {
                    "200":{
                        "description": "an animal object",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Animal/id"
                                }
                            }
                        }
                    }
                 }
            },
            "put":{
                "summary": "update animal with a givem id",
                "requestBody":{
                    "description": "Animal object",
                    "required": true,
                    "content": {
                        "application":{
                            "schema":{
                                "$ref":"#/components/schemas/Animal"
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "in":"path",
                        "name": "id",
                        "required": true,
                        "description": "animal with new properties",
                        "schema":{
                            "$ref":"#/components/id"
                        }
                    }
                ],
                "responses": {
                    "200":{
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Animal"
                                }
                            }
                        }
                    }
                }
            },
            "delete":{
                "summary": "delete animal with a given ID",
                "parameters": [
                    {
                        "in": "path",
                        "name":"id",
                        "required": true,
                        "description": "delete animal with id",
                        "schema":{
                            "$ref":"#/components/id"
                        }
                    }
                ],
                "responses": {
                    "200":{
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Animal"
                                }
                            }
                        }
                    }
                }
            }
            
        }
        
       
    }}


